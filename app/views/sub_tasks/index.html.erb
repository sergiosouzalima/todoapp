<div class="row">
  <div class="span10 offset1">

    <h1>Sub Tarefas</h1>
    <h3><%= @task.name %> (<%= @task.user.name %>)</h3>

    <table class="table table-striped table-bordered table-condensed">
      <thead>
        <tr>
          <th>Descrição da Sub Tarefa</th>
          <th colspan="3"></th>
        </tr>
      </thead>

      <tbody class="sub-task-index">
        <%= render "index" %>
      </tbody>
    </table>
    <br>

    <%= link_to 'Nova Sub Tarefa', new_sub_task_path( id: @task.id ) %>
  </div>
</div>
