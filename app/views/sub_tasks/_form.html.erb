<%= simple_form_for(@sub_task) do |f| %>

  <div class="form-inputs">
    <%= f.input :name %>
    <%= f.hidden_field :task_id, :value => @sub_task.task_id %>
    <%= f.hidden_field :user_id, :value => current_user.id %>
  </div>

  <div class="form-actions">
    <%= f.button :submit %>
  </div>
<% end %>
