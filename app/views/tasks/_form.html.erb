<div class="authform">
  <%= simple_form_for(@task) do |f| %>

    <div class="form-inputs">
      <%= f.input :name %>
      <%= f.input :public, :label => "Publico/Privado", :collection => ['public','private'], :selected => "public" %>
    </div>

    <div class="form-actions">
      <%= f.button :submit %>
    </div>
  <% end %>
</div>
