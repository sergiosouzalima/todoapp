<div class="row">
  <div class="span10 offset1">
    <h1>Tarefas</h1>
    <table class="table table-striped table-bordered table-condensed">
      <thead>
        <tr>
          <th>Descricao</th>
          <th>Publica?</th>
          <th>Dono</th>
          <th>Sub Tarefas</th>
          <th colspan="2"></th>
        </tr>
      </thead>

      <tbody>
        <% @tasks.each do |task| %>
          <tr>
            <td><strong><%= link_to_if is_edition_allowed?(task.user_id, task.public, current_user.id), task.name, edit_task_path(task) %></strong></td>
            <td><%= task.public %></td>
            <td><%= task.user.name unless task.user.blank? %></td>
            <td><%= link_to "#{task.sub_tasks.count} Itens", sub_tasks_path( id: task.id ) %></td>
            <td><%= link_to 'Mostrar', task %></td>
            <td><%= link_to 'Excluir', task, method: :delete, data: { confirm: 'Tem certeza?' } %></td>
          </tr>
        <% end %>
      </tbody>
    </table>

    <br>

    <%= link_to 'Nova Tarefa', new_task_path %>
  </div>
</div>

